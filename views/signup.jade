doctype html
html
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(name="description", content= "Page to sign up for a library account")
    title= pageTitle
    link(rel = "icon", type="image/png", href="/assets/img/circle-of-books-favicon.png")
    link(rel='stylesheet', href='/stylesheets/main_style.css')
    link(rel='stylesheet', href='/stylesheets/nav_style.css')
    link(rel='stylesheet', href='/stylesheets/register_style.css')
    script(src="/scripts/nav.js")
    script(src="/scripts/signup.js")
  body
  header#page-header
      h1 Circle of Books Library
  main
    section#register-section 
      h1 Sign up
      form#register-form
        label(for='firstname') First Name:
        br
        input(type="text", id="firstname")
        br
        label(for='lastname') Last Name:
        br
        input(type="text", id="lastname")
        br
        label(for='email') Email Adress:
        br
        input(type="text", id="email")
        br
        label(for='address') Adress:
        br
        input(type="text", id="adress")
        br
        label(for='username') Username:
        br
        input(type="text", id="username")
        br
        label(for='password') Password:
        br
        input(type="password", id="password")
        br
        input(type="submit", value="Create Account").button
      p 
        | Already signed up? 
        a(href="./login") Login here!