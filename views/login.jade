doctype html
html
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(name="description", content= "Login page for the library website")
    title= pageTitle
    link(rel = "icon", type="image/png", href="/assets/img/circle-of-books-favicon.png")
    link(rel='stylesheet', href='/stylesheets/main_style.css')
    link(rel='stylesheet', href='/stylesheets/nav_style.css')
    link(rel='stylesheet', href='/stylesheets/login_style.css')
    script(src="/scripts/nav.js")
    script(src="/scripts/login.js")
  body
  header#page-header
      h1 Circle of Books Library
  main
    section#login-section 
      h1 Login
      form#login-form
        input(type="text", id="username", placeholder = "username")
        br
        input(type="password", id="password", placeholder = "password")
        br
        input(type="submit", value="Log in").button
      p 
        | No account yet? 
        a(href="./signup") Sign up here!